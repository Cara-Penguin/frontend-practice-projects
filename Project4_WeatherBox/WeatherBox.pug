doctype html
html
    head
        title WeatherBox
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="WeatherBox.css")
    body
        .daybox
            label
                input#switch_night(type='checkbox')
                .top
                    .moon
                    .cloud
                        .rain
                        .rain.rain2
                        .rain.rain3
                    svg.temsvg
                        circle(cx=0 cy=60 r=3)
                        text(x=0 y=60) 29°
                        circle(cx=70 cy=50 r=3)
                        text(x=70 y=45) 30°
                        circle(cx=140 cy=70 r=3)
                        text(x=140 y=70) 28°
                        circle(cx=210 cy=60 r=3)
                        text(x=210 y=60) 29°
                        circle(cx=280 cy=40 r=3)
                        text(x=280 y=40) 31°
                        circle(cx=350 cy=60 r=3)
                        text(x=350 y=60) 29°
                        circle(cx=420 cy=70 r=3)
                        text(x=420 y=70) 28°
                        circle(cx=490 cy=60 r=3)
                        text(x=490 y=60) 29°
                        circle(cx=560 cy=560 r=3)
                        text(x=560 y=560) 29°
                        polyline(points="0,60 70,50 140,70 210,60 280,40 350,60 420,70 490,60")
                    .text_area
                        .temperature 29°C
                        .infos
                            .address 台北市信義區
                            .time 星期二 下午9:00
                .bottom
                    .dayweather
                        h3 MON
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 TUE
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 WED
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)

                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 THU
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)

                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)

                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 FRI
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=22)
                    .dayweather
                        h3 SAT
                        svg(viewbox="-63 -30 100 100")
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)

                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)
                    .dayweather
                        h3 SUN
                        svg(viewbox="-63 -30 100 100")
                            line.rain(x1=-25 y1=15 x2=-25 y2=35)
                            line.rain(x1=-14 y1=5 x2=-14 y2=25)
                            line.rain(x1=-5 y1=20 x2=-5 y2=45)
                            circle.cloud(cx=0 cy=30 r=20)
                            circle.cloud(cx=-15 cy=30 r=20)
                            circle.cloud(cx=-30 cy=30 r=20)

                            circle.cloud(cx=-25 cy=10 r=15)
                            circle.cloud(cx=-7 cy=15 r=15)


